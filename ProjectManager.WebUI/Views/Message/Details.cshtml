@model ProjectManager.Entities.Message

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Message details</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Information</h4>
        <p>@Html.DisplayNameFor(model => model.Title): @Html.DisplayTextFor(model => model.Title)</p>
        <p>From: @Html.DisplayTextFor(model => model.Sender.Email) </p>
        <p>@Html.DisplayNameFor(model => model.SentDate): @Html.DisplayTextFor(model => model.SentDate)</p>
        <p>@Html.DisplayNameFor(model => model.Content): @Html.DisplayTextFor(model => model.Content)</p>
    </div>
    <!-- /.col-lg-12 -->
</div>