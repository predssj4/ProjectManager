@model ProjectManager.Entities.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Delete user</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Are you sure you want to delete this user?</h4>
        <p>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</p>
        <p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
        <p>@Html.DisplayNameFor(model => model.Surname): @Html.DisplayFor(model => model.Surname)</p>
       
         @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>