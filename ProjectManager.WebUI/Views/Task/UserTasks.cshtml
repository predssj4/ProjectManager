@model IEnumerable<ProjectManager.Entities.Task>

@{
    ViewBag.Title = "User tasks";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Your tasks</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Deadline</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td><a href="@Url.Action("Details", new { id = item.ID})">@Html.DisplayFor(itemModel => item.Name)</a></td>
                            <td>@Html.DisplayFor(itemModel => item.Priority.Name)</td>
                            <td>@Html.DisplayFor(itemModel => item.Status.Name)</td>
                            <td>@Html.DisplayFor(itemModel => item.Deadline)</td>
                            @if (item.Status.Name != "Finished")
                            {
                                <td>@Html.ActionLink("Finish", "Finish", new { id = item.ID })</td>
                            }
                            @if (item.Status.Name == "Finished")
                            {
                                <td>@Html.ActionLink("Reopen", "Reopen", new { id = item.ID })</td>
                            }
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>