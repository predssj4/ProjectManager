@model IEnumerable<ProjectManager.Entities.Document>

@{
    ViewBag.Title = "Documents";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Documents</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>File</th>
                        @if (HttpContext.Current.User.IsInRole("admin"))
                        {
                            <th>Edit</th>
                            <th>Delete</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td><a href="@Url.Action("Details", new { id = item.ID})">@Html.DisplayFor(itemModel => item.Name)</a></td>
                            <td><a href="@Html.DisplayTextFor(itemModel => item.Path)">View</a></td>
                            @if (HttpContext.Current.User.IsInRole("admin"))
                            {
                                <td>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</td>
                                <td>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>