@model IEnumerable<ProjectManager.Entities.Message>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Your messages</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>From</th>
                        <th>Date</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td><a href="@Url.Action("Details", new { id = item.ID})">@Html.DisplayFor(itemModel => item.Title)</a></td>
                            <td>@Html.DisplayFor(itemModel => item.Sender.Email)</td>
                            <td>@Html.DisplayFor(itemModel => item.SentDate)</td>
                            <td>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>