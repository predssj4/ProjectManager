@model ProjectManager.Entities.Bug

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Edit bug</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            <div class="form-group">
                <label>Type</label>
                @Html.DropDownListFor(model => model.Type.ID, new SelectList(ViewBag.Types, "ID", "Name", 1), new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", cols = "6" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        }
    </div>
</div>