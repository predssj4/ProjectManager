@model ProjectManager.Entities.Message

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Delete user</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Are you sure you want to delete this message?</h4>
        <p>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</p>
        <p>@Html.DisplayNameFor(model => model.Content): @Html.DisplayFor(model => model.Content)</p>

        @using (Html.BeginForm())
        {

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
            </div>
        }
    </div>
</div>