@model IEnumerable<ProjectManager.Entities.Bug>

@{
    ViewBag.Title = "Bugs";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Bugs</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Assign yourself</th>
                        <th>Edit</th>
                        @if (HttpContext.Current.User.IsInRole("admin"))
                        {
                            <th>Delete</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td><a href="@Url.Action("Details", new { id = item.ID})">@Html.DisplayFor(itemModel => item.Name)</a></td>
                            <td>@Html.DisplayFor(itemModel => item.Type.Name)</td>
                            <td>@Html.DisplayFor(itemModel => item.Status.Name)</td>
                            @if (item.User == null)
                            {
                                <td>@Html.ActionLink("Assign", "Assign", new { id = item.ID })</td>
                            }
                            else
                            {
                                <td>Assigned</td>
                            }
                            <td>@Html.ActionLink("Edit", "Edit", new { id = item.ID })</td>
                            @if (HttpContext.Current.User.IsInRole("admin"))
                            {
                                <td>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</td>
                            }
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>